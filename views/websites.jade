extends layout

block content
    hr
    h1 Websites
    hr
    br

    if websites.length
        p Here are the current websites:
        ul.websites
            for website in websites
                li.website
                    a(href='/websites/#{website.id}') #{website.name}
    else
        p There are no websites currently.

    form(action='', method='POST')
        p Create a new website:
        input(type='text', name='name', placeholder='Name', required)
        input(type='text', name='creator', placeholder='creator', required)
        input(type='submit', value='Create')
